<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:theme="@style/AppTheme.NoActionBar"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deposit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deposit" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:fontFamily="@font/bentham"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Deposit"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">



        <!--  <TextView
              android:id="@+id/aagg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Select Bank"
              android:textColor="#000000"
              android:fontFamily="sans-serif-medium"
              android:textSize="16sp"
              android:layout_column="1"/>-->



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_margin="5dp"
            app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bank_auto"
                android:layout_column="3"
                android:paddingLeft="10dp"
                android:hint="Select Bank"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:background="@drawable/editbox"/>
        </com.google.android.material.textfield.TextInputLayout>






        <!--  <TextView
              android:id="@+id/accnw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:text="Name"
              android:textColor="#000000"
              android:textSize="16sp"
              android:layout_column="1"/>
  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_field1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/entered_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="#6B6B6B"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textCursorDrawable="@null"
                android:layout_column="3"
                android:background="@drawable/editbox"/>
        </com.google.android.material.textfield.TextInputLayout>






        <!--  <TextView
              android:id="@+id/amggnw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Phone Number"
              android:textColor="#000000"
              android:fontFamily="sans-serif-medium"
              android:textSize="16sp"
              android:layout_column="1"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_field2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/enteredphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="#6B6B6B"
                android:fontFamily="sans-serif"
                android:textCursorDrawable="@null"
                android:background="@drawable/editbox"
                android:layout_column="3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--  <TextView
              android:id="@+id/aanw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:text="Aadhaar Number"
              android:textColor="#000000"
              android:layout_marginTop="10dp"
              android:textSize="16sp"
              android:layout_column="1"/>
  -->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="5dp"
            android:layout_column="3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aadhaar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="13"
                android:fontFamily="sans-serif"
                android:inputType="numberPassword"
                android:maxLength="12"
                android:textColor="#6B6B6B"
                android:hint="Aadhar Number"
                android:paddingLeft="10dp"
                android:background="@drawable/editbox"
                app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_field3"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            app:hintTextAppearance="@style/tf"
                    app:boxBackgroundColor="#f1f1f1"
        app:boxStrokeColor="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/totamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:background="@drawable/editbox"
                android:hint="Amount"
                android:maxLength="5"
                android:textSize="16sp"
                android:textColor="#6B6B6B"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif"
                android:textCursorDrawable="@null"
                android:layout_column="3"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button1"
        android:enabled="true"
        android:text="DEPOSIT"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/backimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button3"
        app:srcCompat="@drawable/backarrow" />

        </LinearLayout>
    </ScrollView>


    <include
        android:id="@+id/aeps_withdraw_footer"
        layout="@layout/footer_template" />
</LinearLayout>

